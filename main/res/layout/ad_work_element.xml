<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/textView_adWork_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text= "Name of item"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_adWork_img"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView_adWork_img"
        app:layout_constraintTop_toTopOf="@+id/imageView_adWork_img" />

    <ImageView
        android:id="@+id/imageView_adWork_img"
        android:layout_width="100dp"
        android:layout_height="104dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_adWork_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Num"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton_adWork_status"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_adWork_status"
        app:layout_constraintTop_toTopOf="@+id/imageButton_adWork_status" />

    <ImageButton
        android:id="@+id/imageButton_adWork_status"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icb_butchi" />

</android.support.constraint.ConstraintLayout>