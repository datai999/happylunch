<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <EditText
        android:id="@+id/editText_adRecharge_mssv"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="8"
        android:background="@drawable/border_text"
        android:drawableLeft="@drawable/ic_search"
        android:drawablePadding="5dp"
        android:hint="MSSV"
        android:inputType="number"
        android:maxLines="1"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_adRecharge_money"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="8"
        android:background="@drawable/border_text"
        android:drawableLeft="@drawable/ic_attach_money_black_24dp"
        android:drawablePadding="5dp"
        android:hint="Money"
        android:inputType="number"
        android:maxLines="1"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/editText_adRecharge_mssv"
        app:layout_constraintTop_toTopOf="@+id/editText_adRecharge_mssv" />

    <GridView
        android:id="@+id/grid_adRecharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:numColumns="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editText_adRecharge_money"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editText_adRecharge_mssv"
        app:layout_constraintTop_toBottomOf="@+id/editText_adRecharge_mssv"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>